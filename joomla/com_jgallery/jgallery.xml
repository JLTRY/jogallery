<?xml version="1.0" encoding="utf-8"?>
<extension type="component"  method="upgrade">
	<name>com_jgallery</name>
	<!-- The following elements are optional and free of formatting constraints -->
	<creationDate>July 16, 2025</creationDate>
	<author>Jean-Luc TRYOEN</author>
	<authorEmail>jltryoen@orange.fr</authorEmail>
	<authorUrl>http://www.jltryoen.fr</authorUrl>
	<copyright>Copyright Info</copyright>
	<license>License Info</license>
	<!--  The version string is recorded in the components table -->
	<version>2.0.2</version>
	<!-- The description is optional and defaults to the name -->
	<description>COM_JGALLERY_DESCRIPTION</description>

	<install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<update> <!-- Runs on update; New since J2.5 -->
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>
	<namespace path="src/">JLTRY\Component\JGallery</namespace>

	<!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
		to copy FROM in the package to install therefore files copied
		in this section are copied from /site/ in the package -->
	<files folder="site">
		<filename>index.html</filename>
		<filename>jgallery.php</filename>
		<folder>src</folder>
		<folder>tmpl</folder>
	</files>

	<administration>
		<!-- Administration Menu Section -->
		<menu link='index.php?option=com_jgallery' img="./media/com_jgallery/images/tux-16x16.png">COM_JGALLERY_MENU</menu>
        <submenu>
            <menu view="categories" link="option=com_categories&amp;view=categories&amp;extension=com_jgallery">COM_CATEGORIES</menu>
            <menu view="galleries" link='option=com_jgallery' img="../media/com_jgallery/images/tux-16x16.png">COM_JGALLERY_SUBMENU_GALLERIES</menu>
            <menu view="foldergroups" link='option=com_jgallery&amp;view=foldergroups'>COM_JGALLERY_SUBMENU_FOLDERS</menu>
        </submenu>
		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder
			to copy FROM in the package to install therefore files copied
			in this section are copied from /admin/ in the package -->
		<files folder="admin">
			<!-- Admin Main File Copy Section -->
			<filename>index.html</filename>
			<filename>config.xml</filename>
			<filename>jgallery.php</filename>
			<filename>access.xml</filename>
			<folder>forms</folder>
			<folder>layouts</folder>
			<!-- SQL files section -->
			<folder>sql</folder>
			<folder>src</folder>
			<folder>services</folder>
			<folder>tmpl</folder>
		</files>
		<languages folder="admin/language">
        	<language tag="en-GB">en-GB/en-GB.com_jgallery.ini</language>
            <language tag="en-GB">en-GB/en-GB.com_jgallery.sys.ini</language>
            <language tag="fr-FR">fr-FR/fr-FR.com_jgallery.ini</language>
            <language tag="fr-FR">fr-FR/fr-FR.com_jgallery.sys.ini</language>
		</languages>
	</administration>
    <media destination="com_jgallery" folder="media">
		<folder>images</folder>
		<folder>css</folder>
		<folder>js</folder>
		<filename>index.html</filename>
		<filename>joomla.asset.json</filename>
    </media>
</extension>