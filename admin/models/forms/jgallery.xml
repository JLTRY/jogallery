<?xml version="1.0" encoding="utf-8"?>
<form
				addrulepath="/administrator/components/com_jgallery/models/rules"
>
	<fieldset
				name="details"
				label="COM_JGALLERY_JGALLERY_DETAILS"
	>
		<field
				name="id"
				type="hidden"
				/>
		<field
				name="greeting"
				filter="JComponentHelper::filterText"
				buttons="true"
				hide="pagebreak,readmore"
				type="editor" 
				label="COM_JGALLERY_JGALLERY_GREETING_LABEL"
				description="COM_JGALLERY_JGALLERY_GREETING_DESC"
				size="40"
				class="inputbox validate-greeting"
				validate="greeting"
				required="true"
				default=""
				/>
		<field
				name="catid"
				type="category"
				extension="com_jgallery"
				class="inputbox"
				default=""
				label="COM_JGALLERY_JGALLERY_FIELD_CATID_LABEL"
				description="COM_JGALLERY_JGALLERY_FIELD_CATID_DESC"
				required="true"
		>
			<option value="0">JOPTION_SELECT_CATEGORY</option>
		</field>
	</fieldset>
	<fields name="params">
		<fieldset
				name="params"
				label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS"
		>
			<field
					name="show_category"
					type="list"
					label="COM_JGALLERY_JGALLERY_FIELD_SHOW_CATEGORY_LABEL"
					description="COM_JGALLERY_JGALLERY_FIELD_SHOW_CATEGORY_DESC"
					default=""
			>
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
		</fieldset>
	</fields>
	<fieldset
			name="accesscontrol"
			label="COM_JGALLERY_FIELDSET_RULES"
	>
    	<field
				name="asset_id"
				type="hidden"
				filter="unset"
				/>
    	<field
				name="rules"
				type="rules"
				label="COM_JGALLERY_FIELD_RULES_LABEL"
				filter="rules"
				validate="rules"
				class="inputbox"
				component="com_jgallery"
				section="message"
				/>
    </fieldset>
</form>
